@model WebAppOblig4.Models.Booking

<form asp-action="Booking" method="post">
    <div class="form-group">
        <label for="roomType">Room Type:</label>
        <select class="form-control" id="roomType" name="roomType">
            <option value="SingelRom">Singelrom</option>
            <option value="DobbeltRom">Dobbeltrom</option>
            <option value="Suite">Suite</option>
        </select>
    </div>
    <div class="form-group">
        <label for="checkinDate">Innsjekksdato:</label>
        <input class="form-control" id="checkinDate" name="checkinDate" type="date" />
    </div>
    <div class="form-group">
        <label for="checkoutDate">Utsjekksdato:</label>
        <input class="form-control" id="checkoutDate" name="checkoutDate" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Reserver Rom</button>
</form>


